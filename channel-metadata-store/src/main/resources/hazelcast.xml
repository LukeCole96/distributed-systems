<hazelcast xmlns="http://www.hazelcast.com/xml/mapper"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.hazelcast.com/xml/mapper
                              http://www.hazelcast.com/xml/mapper/hazelcast-mapping-3.12.xsd">
    <network>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <member>hazelcast:5701</member>
                <!-- Add more members as needed -->
            </tcp-ip>
        </join>
    </network>

    <map name="channelMetadataMap">
        <map-store enabled="true"
                   class-name="com.app.cache.ChannelMetadataMapStore"/>
        <!-- Customize your map settings here -->
    </map>
</hazelcast>